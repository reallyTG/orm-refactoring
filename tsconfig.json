{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "allowJs": true,
      "module": "commonjs",
      "outDir": "dist",
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "removeComments": false,
      "lib": [
        "esnext"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }